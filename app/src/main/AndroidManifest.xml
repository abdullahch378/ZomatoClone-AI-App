<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zomatoclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZomatoClone">

        <!-- Splash / Launcher Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication -->
        <activity android:name=".LoginActivity" android:exported="true" />
        <activity android:name=".SignupActivity" android:exported="true" />
        <activity android:name=".ForgotPasswordActivity" android:exported="true" />

        <!-- Main / Home -->
        <activity android:name=".MainActivity" android:exported="true" />
        <activity android:name=".HomeActivity" android:exported="true" />
        <activity android:name=".MenuActivity" android:exported="true" />
        <activity android:name=".CartActivity" android:exported="true" />
        <activity android:name=".OrderSuccessActivity" android:exported="true" />

        <!-- Profile & Restaurant Details -->
        <activity android:name=".ProfileActivity" android:exported="true" />
        <activity android:name=".RestaurantDetailsActivity" android:exported="true" />
        <activity android:name=".SearchActivity" android:exported="true" />

    </application>

</manifest>
